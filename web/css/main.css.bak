body{
 font-family: Helvetica;
 font-size: 14px;
}

a {
	color: #000000;
}

a:visited {
	color: #000000;
}

#login-container {
  width: 500px;
  margin-left: auto;
  margin-right: auto;
}

#login-form{
  position: relative;
  left:120px;
  text-align:left;
}

#box{
  background-color: #ABC8E2;
  border: 1px solid #6699C2;
  height:325px;
  padding:30px;
  text-align:center;
}

.form-td {
	background-color: #ABC8E2;
	padding: 10px;
}

.form-td-right {
	background-color: #95AEC5;
  padding: 10px;
}

#choices{
  text-align:left;
}

.link{
  font-size:1.5em;
  font-weight:bold;
}

.desc{
  font-size:1.2em;
  padding-left: 40px;
}


#logo{
   float:left;
   margin-right:120px;
   margin-left:40px;
   position:relative;
   z-index:2;
   width:75px;
}

#menu{
  float: left;
  padding:30px;
  padding-top:202px;
  margin-top:-173px;
  font-size: 13px;
  background-color: #ABC8E2;
}

#menu ul{
	padding-left: 5px;
}

#formTable{
    margin-left: 20px;
}


#content{
  height: 100%;
}

#list-container, #content-container{
  padding-left: 20px;
  padding-top: 20px;
  float: left;
  width: 70%;
}

#advanced-search-top {
  padding-left: 20px;
  padding-top: 20px;
  float: left;
}

.clear{
  clear: both;	
}

#ajax-loading{
  display: none;
}

#header{
  width:1200px;
}


#top-menu{
  position:relative;
  padding-top: 1px;
  color: white;
  font-weight: bold;
  font-size: 14px;
  z-index:1;
  background-color: #252326;
  margin-top: 10px;
}

#top-menu a:link{
  color:#DDDDDD;
}

#left-top-menu{
  margin-top:3px;
  background-image: url(images/header_left.gif);
  background-repeat: no-repeat;
  width:50px;
  height:88px;
  float: left;
}

#right-top-menu{
  width:50px;
  height: 88px;
  background-image: url(images/header_right.gif);
  background-repeat: no-repeat;
  float:left;
}

#top-menu-one{
  float: left;
  height: 90px;
}

.top-menu-container{
  padding-top: 20px;
  padding-left: 30px;	
}

.nobullet-ul {
  margin: 0px;
  padding: 0px;	
}

.nobullet-ul li {
	list-style-type: none;
	padding-top: 2px;
}

#top-menu-one table{
  height: 82px;
  width: 1240px;
  background-image: url(images/header.jpg);
  color:white;
  font-size: 1.5 em;
  font-weight: bold;
}

#now-viewing{
	font-size: 26px; 
	weight: bold;
	padding-bottom: 10px;
}

#top-search{
	float: left;
	padding-left: 50px; 
}

#move-menu{
	float:left;
	padding-left: 45px;
}

.plus-img, .delete-img, .image-href{
  position: relative;
  top: 3px;
  border: none;
}

#project-menu, #tag-menu, #check-menu{
	vertical-align: center;
}

#project-menu a, #tag-menu a, #top-search a, #move-menu a {
	color: #DDDDDD;
	text-decoration: none;
}

#botMenu{
   padding-top: 15px;
}

#otherSearch{
	float:right;
}

#add-tag-menu{
	padding-left: 20px;
	float: left;
	display: none;
}

#project-menu{
	float:left; 
	padding-left: 50px;
}

#tag-menu{
	float:left; 
	padding-left: 70px;
}

#check-menu{
	float: left;
	padding-left: 200px;
}

#sort-by-sub{
  padding-bottom: 5px;
  font-size: 14px;
  font-weight: bold;
}

#job-map{
  padding-top: 10px;
  padding-bottom: 10px;	
}

.shoot-datetime{
	font-size: 14px;
	font-weight: bold;
	padding-top: 10px;
	padding-bottom: 10px;
	color: red;
}

.info-header{
	font-size: 18px;
	font-weight: bold;
	padding-top: 15px;
}

.info-header-small{
	font-size: 14px;
	font-weight: bold;
	color: #aaaaaa;
  padding-top: 10px;
  padding-bottom: 10px;
}

.img_link{
  border: 0px none;	
}

.job-list-item-1, .job-list-item-2 {
	margin-top: 7px; 
	margin-bottom: 7px;
	padding: 3px;
	width: 100%;
}

.job-list-item-1{
  background-color: #C0C0C0;
}

.job-list-item-2{
    background-color: #DDDDDD;
}

.job-table{;
  width:100%;
}

#delete-link a {
  color: red;
  font-size: 11px;  
}

#user-banner {
  float: left;
}

.required{
  color: red;
}

#header-title {
  text-align:center;
  font-size: 20px;
  font-weight: bold;
  padding-top: 10px;
  color: #202533;
}

#tooltip {
  position: absolute;
  z-index: 3000;
  border: 1px solid #111;
  background-color: #eee;
  padding: 5px;
  opacity: 0.85;
}
#tooltip h3, #tooltip div { margin: 0; }